generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Inquiry {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  email     String
  company   String?
  country   String?
  message   String
  vehicle   String?
}

model VehicleCatalog {
  id          Int      @id @default(autoincrement())
  modelName   String   @unique
  type        String
  description String?
  imageUrl    String?
}
